<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="@dimen/padmarg_xsmall"
        android:src="@drawable/headset"
        android:id="@+id/ppaudio"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padmarg_xsmall"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ppaudio"
        android:background="@drawable/message_itview_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/padmarg_small"
            android:layout_marginLeft="@dimen/padmarg_small"
            android:id="@+id/audio_length_container"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/audio_length"
                android:text="4:13"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/select"
                android:layout_marginTop="@dimen/padmarg_xsmall"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/audio_length_container"
            android:padding="@dimen/padmarg_small">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/audio_name"
                android:text="Kalash Criminel - Sauvagerie 2"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_big"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/audio_title"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Sauvagerie 2"
                android:layout_marginTop="@dimen/padmarg_xsmall"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/audio_artist"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Kalash Criminel"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>