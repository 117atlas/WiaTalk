<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ensp.reseau.wiatalk.ui.activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_image_height">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/register_image_height"
                android:src="@drawable/splash_r"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/register_title"
                android:textColor="@color/white"
                android:paddingTop="@dimen/padmarg_small"
                android:paddingBottom="@dimen/padmarg_small"
                android:textSize="@dimen/text_large"
                android:textStyle="bold"
                android:background="#99000000"
                android:paddingLeft="40dp"/>

        </RelativeLayout>

        <ensp.reseau.wiatalk.ui.UnSwipeableViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager">

        </ensp.reseau.wiatalk.ui.UnSwipeableViewPager>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
